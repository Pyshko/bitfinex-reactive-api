{
  "name": "bitfinex-reactive-api",
  "version": "0.0.0",
  "description": "Bitfinex reactive node API",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pyshko/bitfinex-reactive-api.git"
  },
  "keywords": [
    "bitfinex"
  ],
  "author": "Maxim Pyshko (just.short.id@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Pyshko/bitfinex-reactive-api/issues"
  },
  "homepage": "https://github.com/Pyshko/bitfinex-reactive-api#readme",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.11",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.spec.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
